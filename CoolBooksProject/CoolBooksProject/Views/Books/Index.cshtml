@model IEnumerable<CoolBooksProject.Models.Books>

@{
      ViewBag.Title = "Book Details";
}

<h1>Book Details</h1>
<p>
      @Html.ActionLink("Create New", "Create")
</p>

<form method="get" action="@Url.Action("Index")" data-otf-ajax="true">

    <div style="display: inline-block">
        <input type="search" placeholder="Seach" name="searchTerm" id="SearchBar"class="form-control"/>
    </div>

    <div style="display: inline-block;">
        <input type="submit" value="Search" id="SubmitButton" class="btn btn-default"  />
    </div>
</form>
<br/>

<div class="container-fluid">
      <table class="table">
            <tr>
                  <th>
                        @Html.DisplayNameFor(model => model.AspNetUsers.Email)
                  </th>
                  <th>
                        @*@Html.DisplayNameFor(model => model.Authors.FirstName)*@ Author
                  </th>
                  <th>
                        @Html.DisplayNameFor(model => model.Genres.Name)
                  </th>
                  <th>
                        @Html.DisplayNameFor(model => model.Title)
                  </th>
                  @*<th>
                            @Html.DisplayNameFor(model => model.AlternativeTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Part)
                        </th>*@
                  <th>
                        @Html.DisplayNameFor(model => model.Description)
                  </th>
                  <th>
                        @Html.DisplayNameFor(model => model.ISBN)
                  </th>
                  @*<th>
                        @Html.DisplayNameFor(model => model.PublishDate)
                  </th>*@
                  <th>
                        @Html.DisplayNameFor(model => model.ImagePath)
                  </th>
                  @*<th>
                        @Html.DisplayNameFor(model => model.Created)
                  </th>*@
                  <th>
                        @Html.DisplayNameFor(model => model.IsDeleted)
                  </th>
                  <th></th>
            </tr>
          
          
          @foreach (var item in Model)
                  {
                        if (item.IsDeleted == false)
                        {
            <tr>
                  <td>
                        @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
                  </td>
                  <td>
                        @Html.DisplayFor(modelItem => item.Authors.FirstName)
                  </td>
                  <td>
                        @Html.DisplayFor(modelItem => item.Genres.Name)
                  </td>
                  <td>
                        <div style=" width:200px;">@Html.ActionLink(@item.Title, "Details", new { id = item.Id })</div>
                  </td>
                  @*<td>
                            @Html.DisplayFor(modelItem => item.AlternativeTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Part)
                        </td>*@
                  <td>
                        <div class="row" style="height:150px; width:400px; overflow:scroll;">
                              @Html.DisplayFor(modelItem => item.Description)
                        </div>

                  </td>
                  <td>
                        @Html.DisplayFor(modelItem => item.ISBN)
                  </td>
                  @*<td>
                        @Html.DisplayFor(modelItem => item.PublishDate)
                  </td>*@
                  <td>
                        <img src="@item.ImagePath" class="img-thumbnail" alt="" max-width="100" max-height="150" />

                  </td>
                  @*<td>
                        @Html.DisplayFor(modelItem => item.Created)
                  </td>*@
                  <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                  </td>
                  <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                  </td>
            </tr>
      }
}

      </table>
</div>